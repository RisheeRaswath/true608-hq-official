{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/app/(.*)", "destination": "/index.html" },
    { "source": "/app", "destination": "/index.html" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}